@{
    ViewData["Title"] = "Home Page";
    // Top 10 News List
    var top10news = new List<News>()
    {
        new News(1, "Topic 1", "Desc 1", "1"),
        new News(2, "Topic 2", "Desc 2", "12"),
        new News(3, "Topic 3", "Desc 3", "8"),
        new News(4, "Topic 4", "Desc 4", "6"),
        new News(5, "Topic 5", "Desc 5", "11"),
        new News(6, "Topic 6", "Desc 6", "13"),
        new News(7, "Topic 7", "Desc 7", "19"),
        new News(8, "Topic 8", "Desc 8", "15"),
        new News(9, "Topic 9", "Desc 9", "3"),
        new News(10, "Topic 10", "Desc 10", "10")
    };
}

<div class="main-container my-5">
    <div class="row">
        @*Left Side*@
        <div class="col-xl-8 col-lg-8 col-md-8-custom col-sm-12 d-inline border-end">
            <div class="d-block text-center justify-content-center p-2 flex-fill">
                @*Slider*@
                <div id="carouselExampleCaptions" class="carousel slide mx-auto">
                    <div class="carousel-inner">
                        @foreach (var item in top10news)
                        {
                            <div class="carousel-item @(item.Title=="Topic 1"?"active":"")">
                                <img src="@Url.Content("~/images/Пример мем.jpg")" class="d-block w-100 img-fluid" alt="...">
                                <div style="right: 0; left: 5%" class="custom-carousel-caption mt-5 d-md-block ">
                                    <div style="text-align: center;background: rgba(0,0,0, 0.4); max-width: 80px; max-height: 20px" class="mb-1 border-dark rounded-pill d-flex align-items-center">
                                        <i class="ms-2 bi bi-eye" style="max-width: 20px; max-height: 18px; margin-bottom: 4px"></i>
                                        <p class="fst-italic fs-6" style="margin-left: 5px;margin-bottom: 0">@(item.Views)k</p>
                                    </div>
                                    <h5>@item.Title</h5>
                                    <p class="text-light text-opacity-100">@item.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                @*Create Post / News*@
                <div class="d-flex row mx-auto mt-5 mb-3">
                    @*Create Post*@
                    <div class="col-xl-5 col-lg-5 col-md-12 mb-3" style="">
                        <div class=" d-block p-2 border">
                            <div class="rounded-circle bg-black m-auto" style="max-width: 100px; max-height: 100px">
                                <img src="images/WhitePensil.png" class="p-2" />
                            </div>
                            <div class="d-block mt-3 mb-3">
                                <p class="my-2 " style="font-size: 30px; font-weight: 700">Стань автором!</p>
                                <a role="button" aria-disabled="true" class="btn btn-dark mt-3" style="font-size: 20px; font-weight: 500; padding: 10px 20px;">Написати пост</a>
                            </div>
                        </div>
                    </div>
                    @*News*@
                    <div class="col-xl-7 col-lg-7 col-md-12" style="padding-right: 0;padding-left: 0">
                        @for (int i = 0; i < 2; i++)
                        {
                            <div class="d-flex @(i==0 ? "mb-3" : "")" style="width: 100%">
                                <img src="images/Пример мем.jpg" class="custom-news-size" />
                                <p style="font-size: 17px; font-weight: 500" class="ms-3">@top10news[top10news.Count - i-1].Title</p>
                            </div>
                        }
                    </div>
                </div>
                @*Top 5 posts*@
                <div class="d-block mx-auto">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="d-flex mb-3">
                            <img src="images/Пример мем.jpg" style="width: 50%;height: 50%" />
                            <p class="ms-3" style="font-size: 18px; font-weight: 500">@top10news[i].Title</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        @*Right Side*@
        <div class="col-xl-4 col-lg-4 col-md-4-custom col-sm-12 d-inline">
            @*News*@
            <div class="justify-content-center text-center">
                <h4 class="fw-bold">НОВИНОЧКИ</h4>
                <div class="srroll-area" style="height: 500px">
                    <ul class="list-group">
                        @foreach (var topic in top10news)
                        {
                            <li class="list-group-item d-flex border-0 justify-content-between align-items-start">
                                <div class="me-auto">
                                    <div class="mb-1 fs-6 fw-bolder text-start">@topic.Title</div>
                                    <div class="fw-lighter text-start" style="font-size: 11px;">@topic.Description</div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="d-flex mt-3">
                    <a role="button" aria-disabled="true" class="btn btn-dark me-auto ms-3" style="font-size: 14px; font-weight: 500; padding: 0px 5px;">Всі новини</a>
                </div>
            </div>
            @*Popular Memes*@
            <div class="justify-content-center text-center mt-5">
                <h4 class="fw-bold ">ПОПУЛЯРНІ МЕМЧИКИ!!!</h4>
                @for (int i = 0; i < top10news.Count - 5; i++)
                {
                    <div class="d-flex justify-content-center">
                        <div class="card text-light m-3 mb-0 d-flex align-items-center" style="border-width: 0">
                            <img src="images/Пример мем.jpg" class="card-img d-block " style="width: 90%;max-height: 100%; max-width: 100%">
                            <div class="card-img-overlay d-flex align-items-start">
                                <span class="badge bg-primary me-auto ms-2" style="font-size: 19px; border-radius: 50%">@(i+1)</span>
                            </div>
                            <p class="text-black me-auto ms-3 mt-1 mb-0" style="font-size: 17px;font-weight: 600">@top10news[i].Title</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


