        <div class="col-xl-7 col-lg-7 col-md-7-custom col-sm-12 d-inline border-end">
            <div class="d-block text-center justify-content-center p-2 flex-fill">
                @*Slider*@
                <div id="carouselExampleCaptions" class="carousel slide mx-auto">
                    <div class="carousel-inner">
                        @foreach (var item in top10news)
                        {
                            <div class="carousel-item @(item.Title=="Topic 1"?"active":"")">
                                <img src="@Url.Content("~/images/Пример мем.jpg")" class="d-block w-100 img-fluid" alt="...">
                                <div style="right: 0; left: 5%" class="custom-carousel-caption mt-5 d-none d-md-block ">
                                    <div style="text-align: center;background: rgba(0,0,0, 0.4); max-width: 80px; max-height: 20px" class="mb-1 border-dark rounded-pill d-flex align-items-center">
                                        <i class="ms-2 bi bi-eye" style="max-width: 20px; max-height: 18px; margin-bottom: 4px"></i>
                                        <p class="fst-italic fs-6" style="margin-left: 5px;margin-bottom: 0">@(item.Views)k</p>
                                    </div>
                                    <h5>@item.Title</h5>
                                    <p class="text-light text-opacity-100">@item.Description</p>
                                </div>
                            </div>
                        }
